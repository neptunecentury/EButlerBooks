@page "/Books/{url}"
@model EButlerBooks.Pages.Books.BookModel
@{
    ViewData["Title"] = Model.Book.Title;
}

@section headerContent{
    <div class="container">
        <h1>@Model.Book.Title</h1>
    </div>
}

<div class=" d-flex container">

    <div class="d-flex flex-column flex-lg-row align-items-start w-100">
        @await Html.PartialAsync("_3DBookPartial", Model.Book)

        <div class="w-100 mt-5 mt-lg-0">
            <div class="card shadow-lg mb-5">
                <div class="card-body">
                    @await Html.PartialAsync("_BookFullDescriptionPartial", Model.Book)

                    <br />
                    <button class="btn btn-primary" data-toggle="modal" data-target="#order-modal">Order Now</button>
                    <a class="btn btn-secondary" asp-page="/Books/Index">See all books</a>
                </div>
            </div>


        </div>


    </div>
</div>


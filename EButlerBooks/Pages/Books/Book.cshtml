@page "/Books/{url}"
@model EButlerBooks.Pages.Books.BookModel
@{
    ViewData["Title"] = "Book";
}

<div class="d-flex">

    <div class="d-flex flex-column flex-lg-row align-items-start mt-5 mb-5 w-100">
        @await Html.PartialAsync("_3DBookPartial", Model.Book)

        <div class="w-100 mt-5 mt-lg-0">
            <div class="card shadow-lg mb-5">
                <div class="card-body">
                    @await Html.PartialAsync("_BookFullDescriptionPartial", Model.Book)
                </div>
            </div>

            <a class="btn btn-info" asp-page="/Books/Index">See all books</a>
        </div>
        

    </div>
</div>
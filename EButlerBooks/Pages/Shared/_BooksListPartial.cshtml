@model EButlerBooks.Models.Book[]

@foreach (var book in Model)
{
    <div class="d-flex flex-column flex-lg-row align-items-start ">
        <div class="book-flat mx-auto mx-lg-0 shadow-lg">
            @*If there is no cover art, use the title and first author to generate one*@
            @if (book.ThumbImageUrl == null)
            {
                @*<div class="img text-center text-uppercase">
                <div class="h3">@book.Title</div>
                <small class="small mt-5">A Novel</small>
                <p class="mt-5">
                    @book.BookAuthors.FirstOrDefault()?.Author.FullName
                </p>
            </div>*@
                <img src="~/img/covers/no-cover.png" alt="@book.Title" />
            }
            else
            {
                <img src="@book.ThumbImageUrl" alt="@book.Title" />
            }

        </div>

        <div class="card w-100 mt-5 mb-1 mt-lg-0 ml-lg-5 shadow-lg">
            <div class="card-body">
                @await Html.PartialAsync("_BookDescriptionPartial", book)
            </div>

        </div>

    </div>

    <hr />
}

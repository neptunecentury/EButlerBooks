@section initScripts{

    <script>


        var _arrowHidden = false;

        $(document).on("scroll", function (ev) {
            var scrollTop = $("html").scrollTop();
            // If the scroll top is more than 0, we can hide the arrow
            if (scrollTop > 0 && !_arrowHidden) {
                $(".down-arrow").hide();
                _arrowHidden = true;
            }

            if (scrollTop === 0 && _arrowHidden) {
                $(".down-arrow").show();
                _arrowHidden = false;
            }
        });
    </script>

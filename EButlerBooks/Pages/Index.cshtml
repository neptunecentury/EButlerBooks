@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

@* If we have a featured book, show it here*@
@if (Model.FeaturedBook != null)
{
    @*<div style="background-image: url('/img/dark-world-light.jpg'); height: 30rem; padding: 5rem 0 5rem 0;">*@
    <div class="container">
        <div class="d-flex">

            <div class="featured d-flex flex-column flex-lg-row align-items-start mt-5 mb-5 mx-auto ">
                <div class="books mx-auto ml-lg-0 mr-lg-5">
                    <div class="book">
                        @*If there is no cover art, use the title and first author to generate one*@
                        @if (Model.FeaturedBook.ThumbImageUrl == null)
                        {
                            <div class="img text-center pt-5 text-uppercase">
                                <div class="h3">@Model.FeaturedBook.Title</div>
                                <small class="small mt-5">A Novel</small>
                                <p class="mt-5">
                                    @Model.FeaturedBook.BookAuthors.FirstOrDefault()?.Author.FullName
                                </p>
                            </div>
                        }
                        else
                        {
                            <img src="@Model.FeaturedBook.ThumbImageUrl" alt="@Model.FeaturedBook.Title" />
                        }


                    </div>
                </div>

                <div class="featured-description w-100 mt-5 mt-lg-0">
                    @await Html.PartialAsync("_BookDescriptionPartial", Model.FeaturedBook)
                </div>

            </div>
        </div>
    </div>
    @*</div>*@
}

@*This section lists all works*@
<div class="container shadow-lg" style="background-color: rgba(255,255,255,.80);">
    <div class="d-flex flex-column">
        @foreach (var book in Model.Books)
        {
            <div class="d-flex flex-column flex-lg-row align-items-start mt-3 pb-lg-3 border-bottom">
                <div class="book-flat mx-auto mx-lg-0">
                    @*If there is no cover art, use the title and first author to generate one*@
                    @if (book.ThumbImageUrl == null)
                    {
                        <div class="img text-center text-uppercase">
                            <div class="h3">@book.Title</div>
                            <small class="small mt-5">A Novel</small>
                            <p class="mt-5">
                                @book.BookAuthors.FirstOrDefault()?.Author.FullName
                            </p>
                        </div>
                    }
                    else
                    {
                        <img src="@book.ThumbImageUrl" alt="@book.Title" />
                    }

                </div>

                <div class=" w-100 mt-5 mb-1 mt-lg-0 ml-lg-5 text-center text-lg-left">
                    @await Html.PartialAsync("_BookDescriptionPartial", book)
                </div>

            </div>
        }

    </div>
</div>

@section styles{
    <style>
        body.featured-image {
            background-image: url('/img/dark-world-background.jpg');
        }
    </style>
}

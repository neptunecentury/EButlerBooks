@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div style="background-image: url('/img/dark-world-light.jpg'); height: 30rem; padding: 5rem 0 5rem 0;">
    <div class="container">

        <div class="d-flex align-items-start " style="padding: 0 10rem 0 10rem;">
            <div class="books mr-5">
                <div class="book">
                    <div class="img text-center pt-5 text-uppercase">
                        <h3 class="">@Model.FeaturedBook?.Title</h3>
                        <small class="small mt-5">A Novel</small>
                        <p class="mt-5">
                            Eric
                            <br />
                            Butler
                        </p>
                    </div>
                </div>
            </div>

            <div class="featured ml-auto w-100">
                @Model.FeaturedBook?.Description
            </div>

        </div>
    </div>
</div>

